<div class="row">
    <div class="col-md-12">
        <br>
        <h2>Courses <a href="/courses/add" class="btn btn-success float-right">Add New Course</a></h2>
        <hr/>
        <!--p>TODO: render a list of all student first and last names here</p-->
        {{#if message}}
            {{message}}
        {{else}}
            <table class="table">
                <thead>
                    <tr>
                        <th>Course Code</th>
                        <th>Course Description</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each course}}
                        <tr>
                            <td class="courseRow"><a href="/course/{{this.courseId}}">{{this.courseCode}}</a></td>
                            <td class="courseRow"><a href="/students?course={{this.courseId}}">{{this.courseDescription}}</a></td>
                            <td><a href="/course/delete/{{this.courseId}}" class="btn btn-danger" >REMOVE</a></td>
                        <tr/>
                    {{/each}} 
                </tbody>

            </table>
        {{/if}}
        <hr/>
        <br/>
    </div>
</div>