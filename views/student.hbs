<div class="row">
    <main class="col-md-12">
        <br>
        {{#if message}}
            {{message}}
        {{else}}
        <h2>{{viewData.student.firstName}} {{viewData.student.lastName}} - Student: {{viewData.student.studentNum}}</h2>
        <hr />
        <form method="post" action="/student/update">
            <input type="hidden" name="studentNum" value="{{viewData.student.studentNum}}" />
            <fieldset>
                <legend>Personal Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>First Name:</label>
                            <input class="form-control" name="firstName" type="text" value="{{viewData.student.firstName}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Last Name:</label>
                            <input class="form-control" name="lastName" type="text" value="{{viewData.student.lastName}}" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label >Email:</label>
                            <input class="form-control" name="email" type="email" value="{{viewData.student.email}}"/>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Address (Street):</label>
                            <input class="form-control" name="addressStreet" type="text" required value="{{viewData.student.addressStreet}}"/>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                                <label>Address (City):</label>
                                <input class="form-control" name= "addressCity" wtype="text" required value="{{viewData.student.addressCity}}"/>
                        </div>
                    </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                 <label>Address (Province):</label>
                                <input class="form-control" name="addressProvince" type="text" value="{{viewData.student.addressProvince}}"/>
                            </div>
                        </div>
                    </div>              
            </fieldset>
            <fieldset>
                <legend>Academic Information</legend>
                <div class="row">
                    <div class="col-md-4">
                        <label>College Employment:</label><br />
                        <div class="form-check">
                            {{#if viewData.student.TA}}
                                <input class="form-check-input" name="TA" checked type="checkbox" id="TA">
                                <label class="form-check-label" for="TA">
                                    Teaching Assistant
                                </label>
                            {{else}}
                                <input class="form-check-input" name="TA" type="checkbox" id="TA">
                                <label class="form-check-label" for="TA">
                                    Teaching Assistant
                                </label>
                            {{/if}}
                        </div>
                        <br />
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Enrollment Status:</label><br />
                            {{#equal viewData.student.status "Full Time"}}
                            <label  class="checkbox-inline">
                                <input type="radio" name="status" checked value="Full Time" /> Full Time
                            </label>
                            <label class="checkbox-inline">
                                    <input type="radio" name="status" value="Part Time" /> Part Time
                            </label>
                            {{else}}
                            <label  class="checkbox-inline">
                                <input type="radio" name="status" value="Full Time" /> Full Time
                            </label>
                            <label class="checkbox-inline">
                                    <input type="radio" name="status" checked value="Part Time" /> Part Time
                            </label>
                            {{/equal}}
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
